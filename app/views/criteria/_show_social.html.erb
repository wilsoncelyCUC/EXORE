  <div class="card-criterium">
    <div class="card-criterium-info">
      <i class="fa-brands fa-stack-overflow"></i>
      <p>Stack OverFlow</p>
    </div>

    <div class="card-criterium-details">
      <% if !@social.nil?   %>
      <%# byebug %>
        <%= link_to @user_stackoverflow, edit_social_path(@social), class: "label-skill"    %>
      <% else %>
        <%= link_to "Add", new_social_path,class: "label-skill"   %>
      <% end %>
    </div>
  </div>

  <div class="card-criterium">
    <div class="card-criterium-info">
      <i class="fa-brands fa-github"></i>
      <p>Github</p>
    </div>

    <div class="card-criterium-details">
     <% if !@social.nil?  %>
      <%= link_to @user_github, edit_social_path(@social), class: "label-skill"   %>
      <% else %>
        <%= link_to "Add", new_social_path,class: "label-skill"   %>
      <% end %>
    </div>
  </div>

  <div class="card-criterium">
    <div class="card-criterium-info">
      <i class="fa-solid fa-briefcase"></i>
      <p>My Portfolio</p>
    </div>

    <div class="card-criterium-details">
      <%= link_to @user_portfolio, "#", class: "label-skill"    %>
    </div>
  </div>


  <div class="d-flex justify-content-center my-0">
    <div class="my-0">
        <%= (link_to "Edit", edit_social_path(@social), class: "btn-rainbow-link") if !@social.nil? %>
    </div>
  </div>
