<div class="container"  role="combobox">

  <%= simple_form_for(@criterium) do |f| %>
      <%= f.input :search_status,
                  label: 'What is your status?',
                  collection: Criterium::SEARCH_STATUS
                  %>
      <%= f.input :notice_period,
                  label: 'Do you have a notice period?',
                  collection: Criterium::NOTICE_PERIOD %>

      <%= f.input :location,
                  label: 'Where would you like to work?'%>

      <%= f.input :remote_work_type,
                  label: 'Do you have a notice period?',
                  collection: Criterium::REMOTE_WORK_TYPE %>

      <%= f.input :salary_grid,
                  label: 'Do you have a notice period?',
                  collection: Criterium::SALARY_GRID %>

      <%= f.input :position_id,
                  label: 'what position are you targeting?',
                  collection: Position.all,
                  label_method: lambda { |position| position.position_name } %>

      <div class="d-flex justify-content-center my-0">
        <%= f.submit 'Update', class:"btn-rainbow-link" %>
        <%#= link_to "Back",  edit_account_path(account)  %>
      </div>
    <% end %>
  <ul data-autocomplete-target="results"></ul>

</div>
